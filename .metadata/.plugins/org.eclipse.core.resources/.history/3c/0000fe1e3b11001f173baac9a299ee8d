package com.data;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class ControllerClass 
{
	private RepositoryInterface repo;
	
	@GetMapping("/")
	public String loadFrom(Model model)
	{
		SearchReqData searchReqData=new SearchReqData();
		List<String> planNames = repo.getPlanNames();
		List<String> planStatus = repo.getPlanStatus();
		
		model.addAttribute("searchForm", searchReqData);
		model.addAttribute("planName", planNames);
		model.addAttribute("planStatus", planStatus);
		return"index";
		
	}

}
