package com.data;

import java.util.Date;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.data.jpa.repository.config.EnableJpaRepositories;

import com.cust.CustomerData;
import com.repo.RepositoryInterface;

@SpringBootApplication
@ComponentScan(basePackages = {"com.data","com.cust","com.repo"})
@EnableJpaRepositories
public class InseurenceReportGenrationApplication {

	public static void main(String[] args) {
		ConfigurableApplicationContext run = SpringApplication.run(InseurenceReportGenrationApplication.class, args);
		RepositoryInterface bean = run.getBean(RepositoryInterface.class);
		
		CustomerData c=new CustomerData();
		c.setPlaneName("Cash");
		c.setPlanStatus("Approved");
		c.setGender("Male");
		c.setStartDate(new Date(1/1/2024));
		c.setEndDate(new Date(1/6/2024));
		
		bean.save(c);
		System.out.println("data saved");
		
		
	}

}
