package com.data;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

@Controller
public class ControllerClass 
{
	@Autowired
	private ServiceClass service;
	
	@PostMapping("/search")
	public String getAllData(SearchReqData searchReqData,Model model)
	{
		System.out.println(searchReqData);
		//List<CustomerDataEntity> searchData = service.getSearchData(searchReqData);
		return null;
		
	}
	
	@GetMapping("/")
	public String loadFrom(Model model)
	{
		model.addAttribute("searchForm", new SearchReqData());
		model.addAttribute("planNames", service.getPlaneName());
		model.addAttribute("planStatuses", service.getPlanStatus());
		return"index";	
		
	}
	

}
